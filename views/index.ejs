
<html>
    <head>
        <link rel="stylesheet" href="/global.css">
        <link rel="stylesheet" href="/styles.css">
        <title> Message Board </title>
    </head>
    <body>
        <div class="container">
            <% messages.forEach( msg => { %>
                <a href=<%= `/messages/${msg.id}`%>>
                    <div class="message">
                        <h2><%= msg.username %></h2>
                        <p> <%= msg.added %></p>
                        <p><%= msg.text %></p>
                    </div>
                </a>
            <% }) %> 

        </div>
        <a class="newMsgBtn" href="/new"> + New Message</a> 

    </body>
</html>
